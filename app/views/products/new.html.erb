<h1 class="title">Products list</h1>
<%= form_for :product, url: products_path do |f| %>
 
  <p> Add New Product <br/><br/>
    <%= f.label :Product_Name %>
    <%= f.text_field :name %>
  </p>
 
  <p>
    <%= f.label :Brand %>
    <%= f.text_area :brand %>
  </p>
 
  <p> 
    <%= f.label :Category %>
    <%= f.text_field :category %>
  </p>
 
  <p>
    <%= f.label :Price %><br>
    <%= f.text_area :price %>
  </p>

  <p>
    <%= f.label :image %>
    <%= f.file_field :image %>   
  </p>


  <p>
    <%= f.submit 'Add Product'%>
  </p>
<% end %>
